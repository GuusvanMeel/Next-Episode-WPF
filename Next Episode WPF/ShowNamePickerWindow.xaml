<Window x:Class="Next_Episode_WPF.ShowNamePickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Next_Episode_WPF"
        mc:Ignorable="d"
        Title="ShowNamePickerWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">

            <TextBlock Text="Select the show name:" Margin="0,0,0,10"/>

            <ComboBox Name="ShowNameComboBox" IsEditable="True" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="OK" Width="75" Margin="0,0,10,0" Click="Ok_Click"/>
                <Button Content="Cancel" Width="75" Click="Cancel_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
