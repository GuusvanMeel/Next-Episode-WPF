<Window x:Class="Next_Episode_WPF.EpisodeNumberPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Episode Numbering Scheme"
        Height="350" Width="600"
        WindowStartupLocation="CenterOwner"
        
        ResizeMode="NoResize">
    
    <StackPanel Margin="15" >

        <!-- Display the sample filename -->
        <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
        Pick the style used for episode numbering in your files.</TextBlock>
        <TextBlock Text="sample file:" FontWeight="Bold" />
        <TextBlock x:Name="SampleFileTextBlock" TextWrapping="Wrap" Margin="0,5,0,15"/>

        <GroupBox Header="Choose a numbering scheme">
            <UniformGrid Columns="2">
                <RadioButton Content="Just the episode number (e.g. E12)" Name="Option1" Margin="5"/>
                <RadioButton Content="Season and episode (e.g. S01E12)" Name="Option2" Margin="5"/>
                <RadioButton Content="Episode word with number (e.g. Episode 12)" Name="Option3" Margin="5"/>
                <RadioButton Content="Season x Episode (e.g. 1x12)" Name="Option4" Margin="5"/>
                <RadioButton Content="Just a number (e.g. 12)" Name="Option5" Margin="5"/>
                <RadioButton Content="EP and number (e.g. EP12)" Name="Option6" Margin="5"/>
                <RadioButton Content="Dash and number (e.g. - 12)" Name="Option7" Margin="5"/>
                <RadioButton Content="Custom" Name="CustomOption" Margin="5"/>
            </UniformGrid>
        </GroupBox>


        <Grid Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!-- TextBox takes most space -->
                <ColumnDefinition Width="Auto"/>
                <!-- Button keeps its size -->
            </Grid.ColumnDefinitions>

            <TextBox x:Name="CustomRegexTextBox"
             Grid.Column="0"
             MaxWidth="300"
             Visibility="Collapsed"
             Margin="0,0,10,0"
             GotFocus="CustomRegexTextBox_GotFocus"/>

            <Button Content="Confirm"
            Grid.Column="1"
            Width="100"
            Click="Confirm_Click"/>
        </Grid>


    </StackPanel>
</Window>
